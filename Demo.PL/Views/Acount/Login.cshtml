@model Demo.BLL.Models.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="Login">
           
            <div class=" text-danger">@ViewData["ErrorMessage"]</div>
            
            <div asp-validation-summary="All"></div>
            <input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>

            <input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="@Model.RememberMe" class="checkbox" required="">
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <div class="row justify-content-between">
            <div class="col-6">
                <p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>

            </div>
            <div class="col-6 mt-3">
                <p>
                    <a asp-action="ForgetPassword" asp-controller="Acount">Forget Password?</a>
                </p>
            </div>
        </div>
    </div>
</div>

