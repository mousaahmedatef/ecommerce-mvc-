@model Demo.BLL.Models.RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="Register">
            <div asp-validation-summary="All"></div>
            <input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>

            <input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

            <input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="@Model.IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Do you have Account? <a asp-action="Login"> Login Now!</a></p>
    </div>
</div>

